{
  "name": "lichess-puzzle-timer",
  "version": "1.0.0",
  "description": "Using this chrome extension, a timer will appear when solving puzzles in lichess. Mimicking the tension felt when playing in a real game, especially blitz and bullet time control.",
  "keywords": [
    "chess",
    "puzzle",
    "timer"
  ],
  "homepage": "https://github.com/el-tecson/lichess-puzzle-timer#readme",
  "bugs": {
    "url": "https://github.com/el-tecson/lichess-puzzle-timer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/el-tecson/lichess-puzzle-timer.git"
  },
  "license": "Apache-2.0",
  "author": "Emmanuel Leu Tecson",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "vite build",
    "dev": "concurrently \"vite build --watch\" \"vite build --config vite.content.config.js --watch\" \"vite build --config vite.background.config.js\"",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}' --ext .ts,.tsx,.js,.jsx --fix && prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.27",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.0",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-checker": "^0.11.0",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "autosize-input": "^1.0.2",
    "modern-normalize": "^3.0.1",
    "react": "^19.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.2.0",
    "react-draggable": "^4.5.0",
    "react-router-dom": "^7.9.5",
    "the-new-css-reset": "^1.11.3"
  }
}
