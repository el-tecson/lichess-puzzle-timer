{
  "name": "Lichess Puzzle Timer",
  "description": "Using this chrome extension, a timer will appear when solving puzzles in lichess.",
  "version": "2.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/lptimer-16.png",
      "32": "images/lptimer-32.png",
      "48": "images/lptimer-48.png",
      "128": "images/lptimer-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/lptimer-16.png",
    "32": "images/lptimer-32.png",
    "48": "images/lptimer-48.png",
    "128": "images/lptimer-128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://lichess.org/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["local.html", "assets/*"],
      "matches": ["https://lichess.org/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ]
}
